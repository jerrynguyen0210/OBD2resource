<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_opacity_30"
    android:weightSum="1920">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="260"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1429"
        android:orientation="horizontal"
        android:weightSum="1080">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"/>
        <LinearLayout
            android:id="@+id/layout_help_contents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1020"
            android:background="@drawable/cali_popup_bg1"
            android:orientation="vertical"
            android:weightSum="1429">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"/>
            <TextView
                android:id="@+id/tv_calibration_help_popup_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="146"
                android:gravity="center"
                android:textColor="#0199e2"
                android:textSize="@dimen/size_70px"
                android:text="@string/camera_height_help_title"/>
            <TextView
                android:id="@+id/tv_calibration_help_popup_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="240"
                android:gravity="center"
                android:textColor="#535353"
                android:textSize="@dimen/size_48px"
                android:text="@string/camera_height_help_desc"
                android:lineSpacingMultiplier="0.9"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="787"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="155"
                android:orientation="horizontal"
                android:weightSum="1020">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"/>
                <Button
                    android:id="@+id/btn_calibration_help_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="970"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_50px"
                    android:text="@string/ok_caps"
                    android:background="@drawable/selector_calibration_help_ok_btn"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="231"/>
</LinearLayout>